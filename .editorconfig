; http://editorconfig.org/

root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_size = 4
indent_style = space

[*.go]
indent_style = tab

[{*.html, *.css, *.scss}]
indent_size = 2

[{*.yaml, *.yml, *.json}]
indent_size = 2

[Makefile]
indent_style = tab
